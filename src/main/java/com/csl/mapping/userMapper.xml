<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.csl.dao.userMapperDao" >
    <resultMap id="UserResult" type="com.csl.entity.User" >
        <id column="id" property="id" jdbcType="INTEGER" />
        <result column="name" property="name" jdbcType="VARCHAR" />
        <result column="password" property="password" jdbcType="VARCHAR" />
        <result column="password" property="mobile" jdbcType="VARCHAR" />
        <result column="password" property="mail" jdbcType="VARCHAR" />
        <result column="password" property="synopsis" jdbcType="VARCHAR" />
    </resultMap>
    <select id="select" resultType="com.csl.entity.User" parameterType="java.lang.Integer">
        SELECT * FROM s_user
    </select>
    <select id="info" resultType="java.lang.String" parameterType="java.lang.String">
        SELECT name FROM s_user WHERE name=#{name}
    </select>

    <select id="login" parameterType="com.csl.entity.User" resultMap="UserResult">
        select * from s_user where name=#{name} and password=#{password}
    </select>
</mapper>